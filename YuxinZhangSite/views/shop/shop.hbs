<div class="container">
  {{> shopnav}}


  {{# each products}}
    <div class="row">
      {{# each this }}
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="{{ this.picture }}" alt="..." class="img-responsive">
            <div class="caption">
              <h3>{{ this.name }}</h3>
              <p class="description">{{ this.description }}</p>
              <div class="clearfix">
                <div class="price pull-left">${{ this.price }}</div>
                <a href="/shop/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
    </div>
  {{/each}}




    {{> footer}}
</div>
