

<div class="container">
  {{> shopnav}}
  <div class="row">
    <div class="logo col-md-6 col-md-offset-3">
      <h1 class="text-center">Yuxin Zhang's Web</h1>
    </div>
    <div class="account-box col-md-4 col-md-offset-4">
        <h1>Create Account</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/shop/signup" method="post">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary pull-middle">Sign Up</button>
        </form>
    </div>
  </div>
</div>
